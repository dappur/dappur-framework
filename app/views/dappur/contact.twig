{% extends 'base.twig' %}

{% import 'macros/form.twig' as form %}

{% block body %}
	<div class="container-fluid">
	    <div class="jumbotron">
	    	<div class="container">
		    	<div class="row text-center">
			    	<div class="col-md-4 col-md-offset-4">
			    		<p>
			    			<img src="{{config['logo']}}" class="img-responsive" alt="{{ config['site-name'] }} Logo" style="width: 100%;">
			    		</p>
			    	</div>
			    </div>

		    	<div class="row">
					<div class="col-sm-12" id="parent">
						<div class="row">
							{% if pageConfig['contact-map-show'] %}
							<div class="col-sm-6">
								<iframe allowfullscreen frameborder="0" height="420px;" src="{{pageConfig['contact-map-url']}}" style="border:0" width="100%"></iframe>
							</div>
							{% endif %}
							<div class="col-sm-6 {% if not pageConfig['contact-map-show'] %}col-sm-offset-3{% endif %}">
								<form action="{{currentRoute}}" class="contact-form" method="post">
									<div class="row">
										<div class="col-sm-6">
											{{ form.text('name', requestParams.name, 'name', 'Name') }}
										</div>
										<div class="col-sm-6">
											{{ form.text('email', requestParams.email, 'email', 'Email') }}
										</div>
									</div>

									{{ form.text('phone', requestParams.phone, 'phone', 'Phone') }}
									{{ form.textarea('comment', requestParams.comment, 'comment', 'Comments/Feedback', null, 6, null)}}

									<div class="row">
										{% if config['recaptcha-enabled'] %}
											<div class="col-sm-6">
												{{ form.custom('recaptcha', recaptcha()) }}
											</div>
										{% endif %}
										<div class="col-sm-6">
											<div class="form-group text-center">
												<button type="submit" class="btn btn-default btn-send"><span class="fa fa-send"></span> Send</button>
											</div>
										</div>
									</div>
									{{csrf()}}
								</form>
							</div>
						</div>
					</div>
				</div>
				<div class="container" style="margin-top: 25px;">
					<div class="row">
						<!-- Boxes de Acoes -->
						<div class="col-xs-12 col-sm-6 col-lg-4">
							<div class="box">
								<div class="icon">
									<div class="image btn-primary">
										<i aria-hidden="true" class="fa fa-envelope"></i>
									</div>
									<div class="info">
										<h3 class="title">ONLINE</h3>
										<p><i aria-hidden="true" class="fa fa-envelope"></i> &nbsp; {{config['contact-email']}}<br>
										<br>
										<i aria-hidden="true" class="fa fa-globe"></i> &nbsp; {{config['domain']}}</p>
									</div>
								</div>
								<div class="space"></div>
							</div>
						</div>
						<div class="col-xs-12 col-sm-6 col-lg-4">
							<div class="box">
								<div class="icon">
									<div class="image btn-primary">
										<i aria-hidden="true" class="fa fa-mobile"></i>
									</div>
									<div class="info">
										<h3 class="title">PHONE</h3>
										<p><i aria-hidden="true" class="fa fa-phone"></i> &nbsp; {{config['contact-phone']}}<br></p>
									</div>
								</div>
								<div class="space"></div>
							</div>
						</div>
						<div class="col-xs-12 col-sm-6 col-lg-4">
							<div class="box">
								<div class="icon">
									<div class="image btn-primary">
										<i aria-hidden="true" class="fa fa-map-marker"></i>
									</div>
									<div class="info">
										<h3 class="title">ADDRESS</h3>
										<p><i aria-hidden="true" class="fa fa-map-marker"></i> &nbsp;
											{{config['site-name']}} <br />
											{{config['contact-street']}}<br />
											{{config['contact-city']}}, {{config['contact-state']}}, {{config['contact-zip']}}
										</p>
									</div>
								</div>
								<div class="space"></div>
							</div>
						</div><!-- /Boxes de Acoes -->
						<!--My Portfolio  dont Copy this -->
					</div>
				</div>
			</div>
	    </div>
	</div>
{% endblock %}

{% block javascript %}
    {% if config['recaptcha-enabled'] %}{{ recaptchaJs() }}{% endif %}
{% endblock %}