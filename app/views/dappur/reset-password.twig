{% extends 'base.twig' %}

{% import 'macros/form.twig' as form %}

{% block body %}

<div class="container">
    <div class="row text-center">
        <div class="col-md-4 col-md-offset-4">
            <img src="{{config['logo']}}" class="img-responsive" alt="{{ config['site-name'] }} Logo">
        </div>
    </div>

    <div class="row" style="margin-top: 20px;">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">Reset Password</div>
                <div class="panel-body">
                    <form action="{{ currentRoute }}" method="POST">
                        {{ form.text('password', null, 'password', 'New Password', null, 'password') }}
                        {{ form.text('password_confirm', null, 'password_confirm', 'Confirm Password', null, 'password') }}
                        {{ form.hidden('reminder', requestParams['reminder'], 'reminder') }}
                        {{ form.hidden('email', requestParams['email'], 'email') }}
                        {{ csrf() }}
                        <input type="submit" value="Reset Password" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
