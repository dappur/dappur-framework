{% extends 'base.twig' %}

{% block title %}{{config['site-name']}} || Email Templates{% endblock %}

{% block stylesheets %}
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 content-header">
                <h1 class="page-header">
                    Emails <small>Templates</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> Dashboard
                    </li>
                    <li>
                        <i class="fa fa-envelope"></i> Emails
                    </li>
                    <li class="active">
                        <i class="fa fa-envelope-square"></i> Templates
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="box box-info">
                    <div class="box-header">
                        <div class="pull-left box-title">Email Templates </div>
                        <div class="pull-right"><a href="{{ path_for('admin-email-template-add') }}" class="btn btn-xs btn-success"><span class="fa fa-fw fa-plus"></span> New Template</a></div>
                        <div style="clear: both;"></div>
                    </div>

                    <div class="box-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="templates_table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Slug</th>
                                    <th>Description</th>
                                    <th>Placeholders</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for template in templates %}
                                    <tr>
                                        <td>{{ template.name }}</td>
                                        <td>{{ template.slug }}</td>
                                        <td>{{ template.description }}</td>
                                        <td>{{ template.placeholders }}</td>
                                        <td>
                                            {% if auth.hasAccess('email.template.edit') %}
                                            <a href="{{ path_for('admin-email-template-edit', {'template_id': template.id}) }}" class="btn btn-primary btn-xs">
                                                <span class="fa fa-fw fa-pencil"></span>
                                            </a>
                                            {% endif %}
                                            {% if user.id != 1 and auth.hasAccess('email.template.delete') %}
                                                <form action="{{ path_for('admin-email-template-delete') }}" method="post" style="display: inline;">
                                                    <input type="hidden" name="template_id" value="{{ template.id }}" />
                                                    {{csrf()}}
                                                    <button class="btn btn-danger btn-xs swal-confirm" data-swtitle="Are you sure?" data-swmessage="This template will be permanently deleted and you will not be able to recover it.">
                                                        <span class="fa fa-fw fa-close"></span>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/responsive.bootstrap.min.js"></script>
<script>
$(document).ready(function() {
    $('#templates_table').DataTable({
        responsive: true,
        stateSave: true

    });
});
</script>
{% endblock %}