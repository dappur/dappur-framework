{% extends 'base.twig' %}

{% block title %}{{config['site-name']}} || Edit Oauth2 Provider{% endblock %}

{% block stylesheets %}
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
        <div class="col-lg-12 content-header">
            <h1 class="page-header">Edit Oauth2 Provider</h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> Dashboard
                </li>
                <li>
                    <i class="fa fa-user-circle"></i> Oauth2 Providers
                </li>
                <li class="active">
                    <i class="fa fa-edit"></i> Edit
                </li>
            </ol>
        </div>

        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Edit Oauth2 Provider</h3>
                </div>
                <form action="{{ currentRoute }}" method="POST" role="form">
                    <div class="box-body">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="row">
                                <h4 style="font-weight: bold;">Details</h4>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group{% if has_error('name') %} has-error{% endif %}">
                                        <label for="name">Name</label>
                                        <input type="text" name="name" class="form-control" id="name" placeholder="Name" value="{% if requestParams.name %}{{requestParams.name}}{% else %}{{provider.name}}{% endif %}" required="required">
                                        <span class="help-block">{{ error('name') }}</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group{% if has_error('slug') %} has-error{% endif %}">
                                        <label for="slug">Slug</label>
                                        <input type="text" name="slug" class="form-control" id="slug" placeholder="Slug" value="{% if requestParams.slug %}{{requestParams.slug}}{% else %}{{provider.slug}}{% endif %}" required="required">
                                        <span class="help-block">{{ error('slug') }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group{% if has_error('scopes') %} has-error{% endif %}">
                                        <label for="scopes">Scopes</label>
                                        <input type="text" name="scopes" class="form-control" id="scopes" placeholder="Scopes" value="{% if requestParams.scopes %}{{requestParams.scopes}}{% else %}{{provider.scopes}}{% endif %}" required="required">
                                        <span class="help-block">{{ error('scopes') }}</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group{% if has_error('button') %} has-error{% endif %}">
                                        <label for="button">Button</label>
                                        <select name="button" id="button" class="form-control" required="required">
                                            <option value="">Select Button</option>
                                            {% for button in bs_social %}
                                                <option value="{{button}}" {% if (requestParams.button and requestParams.button == button) or (not requestParams.button and provider.button == button) %}selected{% endif %}>{{button}}</option>
                                            {% endfor %}
                                        </select>
                                        <span class="help-block">{{ error('button') }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2 col-xs-6">
                                    <div class="form-group{% if has_error('login') %} has-error{% endif %}">
                                        <label for="login">Login</label><br />
                                        <input type="checkbox" data-width="100%" name="login" id="login" {% if (requestParams.login) or (not requestParams.login and provider.login) %}checked{% endif %} data-toggle="toggle">
                                        <span class="help-block">{{ error('login') }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2 col-xs-6">
                                    <div class="form-group{% if has_error('status') %} has-error{% endif %}">
                                        <label for="status">Status</label><br />
                                        <input type="checkbox" data-width="100%" name="status" id="status" {% if (requestParams.status) or (not requestParams.status and provider.status) %}checked{% endif %} data-toggle="toggle">
                                        <span class="help-block">{{ error('status') }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group{% if has_error('authorize_url') %} has-error{% endif %}">
                                        <label for="authorize_url">Authorize URL</label>
                                        <input type="text" name="authorize_url" class="form-control" id="authorize_url" placeholder="Authorize URL" value="{% if requestParams.authorize_url %}{{requestParams.authorize_url}}{% else %}{{provider.authorize_url}}{% endif %}" required="required">
                                        <span class="help-block">{{ error('authorize_url') }}</span>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group{% if has_error('token_url') %} has-error{% endif %}">
                                        <label for="token_url">Token URL</label>
                                        <input type="text" name="token_url" class="form-control" id="title" placeholder="Token URL" value="{% if requestParams.token_url %}{{requestParams.token_url}}{% else %}{{provider.token_url}}{% endif %}" required="required">
                                        <span class="help-block">{{ error('token_url') }}</span>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group{% if has_error('resource_url') %} has-error{% endif %}">
                                        <label for="resource_url">Resource URL</label>
                                        <input type="text" name="resource_url" class="form-control" id="title" placeholder="Token URL" value="{% if requestParams.resource_url %}{{requestParams.resource_url}}{% else %}{{provider.resource_url}}{% endif %}" required="required">
                                        <span class="help-block">{{ error('resource_url') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ csrf() }}=
                    </div>
                    <div class="box-footer">
                        <div class="col-md-4 col-md-offset-4">
                            <button type="submit" class="btn btn-success form-control">Save Oauth2 Provider</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}

{% block javascript %}
<!-- Select2 Dropdowns -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js" type="text/javascript"></script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
{% endblock %}