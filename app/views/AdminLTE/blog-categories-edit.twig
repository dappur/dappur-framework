{% extends 'base.twig' %}

{% block title %}{{config['site-name']}} || Edit Category - {{category.name}}{% endblock %}

{% block body %}
    <div class="col-lg-12 content-header">
        <h1 class="page-header">Edit Category</h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
            <li>
                <i class="fa fa-newspaper-o"></i> Blog
            </li>
            <li class="active">
                <i class="fa fa-edit"></i> Edit Category
            </li>
        </ol>
    </div>

    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Edit Category - {{category.name}}</h3>
            </div>

            <form action="{{ currentRoute }}" method="POST" role="form">
                <div class="box-body">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="form-group{% if has_error('category_name') %} has-error{% endif %}">
                            <label for="category_name">Category Name</label>
                            <input type="text" name="category_name" class="form-control" id="category_name" placeholder="Category Name" value="{{category.name}}" required="required">
                            <span class="help-block">{{ error('category_name') }}</span>
                        </div>

                        <div class="form-group{% if has_error('category_slug') %} has-error{% endif %}">
                            <label for="category_slug">Category Slug</label>
                            <input type="text" name="category_slug" class="form-control" id="category_slug" placeholder="Category Slug" value="{{category.slug}}" required="required">
                            <span class="help-block">{{ error('category_slug') }}</span>
                        </div>
                    </div>
                    {{ csrf() }}
                </div>
                <div class="box-footer">
                    <div class="col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-primary form-control">Edit Category</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascript %}
{% endblock %}

